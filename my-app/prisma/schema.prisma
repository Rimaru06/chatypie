generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id     String  @default(uuid())
  name   String
  email  String @unique @id
  assign_id String?
  chats  chats[]
  contacts contacts[]
}
model chats {
  id        String @id @default(uuid())
  user_id   String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  type     Role
  user      User @relation(fields: [user_id], references: [email])
}

model contacts {
  id        String  @default(uuid())
  user_id   String
  name      String 
  email     String @unique @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User @relation(fields: [user_id], references: [email])
}
enum Role {
  RECEIVED
  SENT
}